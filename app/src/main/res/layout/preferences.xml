<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/panPreferences">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/panMinEngine">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/erpMin"
            android:id="@+id/tvPrefMinEngine"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/edPrefMinEngine"
            android:layout_weight="0.5" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/panMaxEngine">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/erpMax"
            android:id="@+id/tvPrefMaxEngine"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edPrefMaxEngine"
            android:layout_weight="0.5"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/panStepEngine">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/erpStep"
            android:id="@+id/tvPrefStepEngine"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edPrefStepEngine"
            android:layout_weight="0.5"
            android:inputType="numberDecimal" />
    </LinearLayout>

</LinearLayout>