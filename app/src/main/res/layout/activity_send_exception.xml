<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ua.com.glady.uacc.SendExceptionActivity"
    android:gravity="center_vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/panExceptionSend"
        android:background="@drawable/blue_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/ApplicationError"
            android:id="@+id/tvExceptionCaption"
            android:layout_margin="8dp"
            android:layout_marginTop="24dp" />

        <TextView android:text="@string/ApplicationErrorExplanation" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvExceptionDescription"
            android:layout_marginTop="37dp"
            android:layout_margin="8dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ApplicationErrorSendInfo"
            android:id="@+id/cbSendException"
            android:layout_margin="8dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CloseApplication"
            android:id="@+id/btCloseApplication"
            android:onClick="onClick"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/blue_button"
            style="@style/button_text"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="0dp" />

    </LinearLayout>

</RelativeLayout>
