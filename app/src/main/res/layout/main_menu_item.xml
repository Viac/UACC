<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llmainMenuItem"
    android:minHeight="50dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imMainMenuItemImage"
        android:contentDescription="@string/TextStubShort"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlMenuItemText">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:id="@+id/llMenuItemText"
            android:minHeight="50dp"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TextStubShort"
                android:id="@+id/tvMainMenuItemHeader"
                android:textAppearance="@style/flat_list_header"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TextStubMedium"
                android:id="@+id/tvMainMenuItemText"
                android:textAppearance="@style/flat_list_item"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>