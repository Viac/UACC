<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/aqua_white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/panMainPanel">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/aqua_red"
            android:padding="8dp"
            android:id="@+id/panVehicleTypeMenu">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btVehicleType"
                android:background="@android:drawable/ic_dialog_dialer"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:contentDescription="@string/VehicleType"
                android:clickable="true"
                android:onClick="onClick" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onClick"
                android:id="@+id/llVehicleTitle"
                android:focusableInTouchMode="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/TextStubShort"
                    android:id="@+id/tvVehicleType"
                    android:textColor="@color/aqua_white"
                    android:clickable="true"
                    android:onClick="onClick" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/TextStubMedium"
                    android:id="@+id/tvVehicleTypeDescription"
                    android:textSize="12sp"
                    android:textColor="@color/aqua_white"
                    android:clickable="true"
                    android:onClick="onClick" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/panScroll">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/panVehicleData"
                    android:background="@color/aqua_white"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"></LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/panButtons"
                    android:layout_marginTop="8dp">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/SwitchMode"
                        android:id="@+id/btSwitchMode"
                        android:background="@color/aqua_red"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:textColor="@color/aqua_white"
                        android:maxWidth="200dp"
                        android:clickable="true"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/Calculate"
                        android:id="@+id/btCalculate"
                        android:background="@color/aqua_red"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:textColor="@color/aqua_white"
                        android:maxWidth="200dp"
                        android:clickable="true"
                        android:onClick="onClick" />

                </LinearLayout>

                <WebView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/webResult"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
